{
  "name": "replainow-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Official website for ReplAInow - AI Shopify Helpdesk",
  "homepage": "https://replainow.com",
  "scripts": {
    "clean": "rimraf dist .vite",
    "typecheck": "tsc --noEmit",
    "dev": "vite",
    "build:de": "cross-env FORCE_LOCALE=de vite build",
    "build:en": "cross-env FORCE_LOCALE=en vite build",
    "build:mpages": "npm run clean && npm run build:de && node scripts/build/make-locale-html.mjs && node scripts/build/create-spa-redirects.mjs && node scripts/seo/generate-sitemap.mjs && node scripts/seo/generate-robots.mjs && node scripts/build/postbuild-verify.mjs",
    "build": "npm run build:mpages",
    "deploy": "npm run build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview --strictPort --port 4173",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:parity": "playwright test tests/e2e/parity.spec.ts",
    "lh:en": "lighthouse http://localhost:4173/en --output=json --output-path=docs/seo/reports/en-lh.json",
    "lh:de": "lighthouse http://localhost:4173/ --output=json --output-path=docs/seo/reports/de-lh.json",
    "check:links:en": "linkinator https://replainow.com/en --markdown --recurse --silent=false",
    "lighthouse": "lhci autorun",
    "seo:extract": "node scripts/seo/seo-extract.mjs",
    "seo:generate": "node scripts/seo/generate-sitemap.mjs && node scripts/seo/generate-robots.mjs",
    "seo:verify": "node scripts/seo/verify-seo.mjs",
    "dev:locale-report": "node scripts/dev/locale-report.mjs",
    "dev:component-usage": "node scripts/dev/component-usage.mjs",
    "qa": "node scripts/qa/comprehensive-qa.mjs",
    "qa:performance": "node scripts/qa/performance-audit.mjs",
    "qa:seo": "npm run seo:verify",
    "qa:sitemap": "node scripts/qa/sitemap-verify.mjs",
    "qa:all": "npm run qa && npm run qa:performance && npm run qa:seo && npm run qa:sitemap",
    "pre-commit": "node scripts/qa/pre-commit-checks.mjs",
    "ci": "npm run pre-commit && npm run build && npm run qa:all"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-hover-card": "^1.1.15",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-menubar": "^1.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.59.16",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "colord": "^2.9.3",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "next-themes": "^0.4.6",
    "node-fetch": "^3.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-helmet-async": "^2.0.5",
    "react-router-dom": "^7.9.5",
    "satori": "^0.18.3",
    "sharp": "^0.34.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "wait-on": "^9.0.1",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.0",
    "@eslint/js": "^9.13.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.55.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "autoprefixer": "^10.4.20",
    "axe-core": "^4.10.0",
    "cross-env": "^10.0.0",
    "eslint": "^9.13.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^16.5.0",
    "playwright": "^1.55.1",
    "postcss": "^8.4.49",
    "puppeteer": "^24.27.0",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.18",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^7.1.12"
  }
}
